{% extends 'base.html.twig' %}

{% block title %}Hello TypologieController!{% endblock %}

{% block body %}

<h1>{{ titre }}</h1>

<h2>Ajout</h2>

<div>
    {{ form_start(base_form) }}

    {{ form_widget(base_form) }}

    <button type="submit" class="btn btn-success">Ajout</button>

    {{ form_end(base_form) }}
</div>

<h2>Listes</h2>

<table class="table">
    <tr>
        <th>Nom</th>
        <th>Description</th>
    </tr>
    {% for base in bases %}
    <tr>
        <td>{{ base.nom }}</td>
        <td>{{ base.description }}</td>
    </tr>
    {% endfor %}
</table>

{% endblock %}
